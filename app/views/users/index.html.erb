
 <div class="container px-5 px-sm-0">  
     <div class="row">
         
        <%= render 'shared/new_book',user: current_user, book: @book %>
        
        <div class="col-md-8 offset-md-1">
            <table class="table" >
                <h1>Users</h1>
                    <thead>
                         <tr>
                             <th scope="col">image</th>
                             <th scope="col">name</th>
                             <th colspan="3"></th>
                         </tr>
                    </thead>
                <% @users.each do |user| %>
                    <tbody>
                          <tr>
                             <td class="col-3"><%= attachment_image_tag user,:profile_image, size: "50x50" ,fallback: "no_image.jpg"%></td>
                             <td class="col-6"><%= user.name %></td>
                             <td><%= link_to "Show", user_path(user.id) %></td>
                          </tr>
                    </tbody>
                <% end %>
            </table>
        </div>
     </div>
  </div>