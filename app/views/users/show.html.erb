<p id="notice">
 <%= notice %> 
</p>

   
  <div class="container px-5 px-sm-0">  
      <div class="row">
       <%= render "shared/new_book", user: @user,book: @book %>   
          

           
                <div class="col-md-8 offset-md-1">
                        <h1>Books</h1>
                        <table class="table">
                         <thead>
                            <tr>
                               <th colspan="1"></th>
                               <th scope="col">Title</th>
                               <th scope="col">Opinion</th>
                            </tr>
                         </thead>
                          <tbody>
                             <% @books.each do |book| %>
                             <tr>
                                 <td class="col-3"><%= link_to user_path(@user) do %>
                                 <%= attachment_image_tag  @user, :profile_image, size: "50x50", fallback: "no_image.jpg"%>
                                 <% end %>
                                 </td>
                                 <td class="col-3"><%= link_to book.title, book_path(book.id) %></td>
                                 <td><%= book.body %></td>
                                
                             </tr>
                             <% end %>
                          </tbody>
                   </table>
                </div>
      </div>
  </div>