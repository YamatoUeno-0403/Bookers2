<p id="notice">
 <%= notice %> 
</p>

<div class="container">  
<div class="row">
        
<%= render "shared/new_book", user: @book.user, book: @new_book %>
          
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table class="table">
              <tbody>
                    <tr>
                        <td class="col-2"><%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image.jpg"%>
                        <br><%= link_to @book.user.name , user_path(@book.user) %></td>
                        <td class="col-3"><%= link_to @book.title, user_path(@book.user_id) %></td>
                        <td><%= @book.body %></td>
                        <% if current_user == @book.user %>
                            <td><%= link_to edit_book_path, class:"btn btn-success" do %>Edit<% end %></td>
                            <td><%= link_to book_path(@book.id), method: :delete, data: {confirm: "削除しますか？"}, class:"btn btn-danger" do %>Destroy<% end %></td>
                        <% end %>
                    </tr>
                   
              </tbody>
            </table>
        </div>
    </div>
</div>