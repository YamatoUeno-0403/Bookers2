
  <div class="container">  
      <div class="row">     

         <%= render 'shared/new_book' %> 
              
                <div class="col-lg-8">
                    <table class="table table table-hover" >
                        <h1>Books</h1>
                         <thead>
                            <tr>
                               <th colspan="1"></th>
                               <th scope="col">Title</th>
                               <th scope="col">Opinion</th>
                            </tr>
                         </thead>
                       <% @books.each do |book| %>
                          <tbody>
                             <tr>
                                 <td><%= book.title %></td>
                                 <td><%= book.body %></td>
                                 <td><%= link_to "Show", user_path(user.id) %></td>
                             </tr>
                          </tbody>
                       <% end %>
                   </table>
                </div>
      </div>
  </div>