
<%= form_with model:@book, local:true do |f| %>     
<%= render 'shared/error_messages', model: f.object %>
<% end %>
  <div class="container">  
      <div class="row">

         <%= render 'shared/new_book' , user: current_user, book: @book%> 
              
                <div class="col-md-8 offset-md-1">
                    <table class="table table-hover table-inverse" >
                        <h1>Books</h1>
                         <thead>
                            <tr>
                               <th colspan="1"></th>
                               <th scope="col">Title</th>
                               <th scope="col">Opinion</th>
                            </tr>
                         </thead>
                       <% @books.each do |book| %>
                          <tbody>
                             <tr>
                                 <td class="col-2"><%= link_to user_path(book.user) do %>
                                 <%= attachment_image_tag  book.user, :profile_image, size: "50x50", fallback: "no_image.jpg"%><% end %></td>
                                 <td class="col-4"><%= link_to book.title, book_path(book.id) %></td>
                                 <td><%= book.body %></td>
                                 
                             </tr>
                          </tbody>
                       <% end %>
                   </table>
                </div>
      </div>
  </div>